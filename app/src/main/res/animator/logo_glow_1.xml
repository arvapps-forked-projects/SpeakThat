<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">
    
    <!-- Glow sequence for main logo shape - pulsing red glow -->
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="200"
        android:valueFrom="@android:color/transparent"
        android:valueTo="@android:color/holo_red_light"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="200"
        android:valueFrom="0"
        android:valueTo="8"
        android:valueType="floatType" />
    
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="150"
        android:valueFrom="@android:color/holo_red_light"
        android:valueTo="@android:color/holo_red_dark"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="150"
        android:valueFrom="8"
        android:valueTo="12"
        android:valueType="floatType" />
    
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="100"
        android:valueFrom="@android:color/holo_red_dark"
        android:valueTo="@android:color/holo_red_light"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="100"
        android:valueFrom="12"
        android:valueTo="8"
        android:valueType="floatType" />
    
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="200"
        android:valueFrom="@android:color/holo_red_light"
        android:valueTo="@android:color/transparent"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="200"
        android:valueFrom="8"
        android:valueTo="0"
        android:valueType="floatType" />
    
</set>
