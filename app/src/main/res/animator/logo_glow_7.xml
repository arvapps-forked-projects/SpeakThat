<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">
    
    <!-- Glow sequence for letter 't' - pulsing yellow glow -->
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="170"
        android:valueFrom="@android:color/transparent"
        android:valueTo="@android:color/holo_orange_light"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="170"
        android:valueFrom="0"
        android:valueTo="4"
        android:valueType="floatType" />
    
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="120"
        android:valueFrom="@android:color/holo_orange_light"
        android:valueTo="@android:color/holo_orange_dark"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="120"
        android:valueFrom="4"
        android:valueTo="8"
        android:valueType="floatType" />
    
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="90"
        android:valueFrom="@android:color/holo_orange_dark"
        android:valueTo="@android:color/holo_orange_light"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="90"
        android:valueFrom="8"
        android:valueTo="4"
        android:valueType="floatType" />
    
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="170"
        android:valueFrom="@android:color/holo_orange_light"
        android:valueTo="@android:color/transparent"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="170"
        android:valueFrom="4"
        android:valueTo="0"
        android:valueType="floatType" />
    
</set>
