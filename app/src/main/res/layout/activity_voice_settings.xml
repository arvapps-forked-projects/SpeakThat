<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".VoiceSettingsActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Speech Rate & Pitch Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_tune_24"
                            android:tint="@color/white_100"
                            android:contentDescription="Voice Characteristics"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/voice_characteristics"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_card_text_primary" />

                    </LinearLayout>

                    <!-- Speech Rate Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_speech_rate"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/purple_card_text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_0_1x"
                            android:textSize="12sp"
                            android:textColor="@color/purple_card_text_secondary" />

                        <SeekBar
                            android:id="@+id/speechRateSeekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="8dp"
                            android:max="290"
                            android:progress="90"
                            android:progressTint="@color/white_100"
                            android:thumbTint="@color/white_100"
                            android:progressBackgroundTint="@color/white_200" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_3_0x"
                            android:textSize="12sp"
                            android:textColor="@color/purple_card_text_secondary" />

                        <TextView
                            android:id="@+id/speechRateValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_1_0x"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"
                            android:minWidth="40dp"
                            android:gravity="center"
                            android:textColor="@color/white_100" />

                    </LinearLayout>

                    <!-- Pitch Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_pitch"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/purple_card_text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_0_1x"
                            android:textSize="12sp"
                            android:textColor="@color/purple_card_text_secondary" />

                        <SeekBar
                            android:id="@+id/pitchSeekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="8dp"
                            android:max="190"
                            android:progress="90"
                            android:progressTint="@color/white_100"
                            android:thumbTint="@color/white_100"
                            android:progressBackgroundTint="@color/white_200" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_2_0x"
                            android:textSize="12sp"
                            android:textColor="@color/purple_card_text_secondary" />

                        <TextView
                            android:id="@+id/pitchValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_1_0x"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"
                            android:minWidth="40dp"
                            android:gravity="center"
                            android:textColor="@color/white_100" />

                    </LinearLayout>

                    <!-- TTS Volume Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_tts_volume"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/purple_card_text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_0_percent"
                            android:textSize="12sp"
                            android:textColor="@color/purple_card_text_secondary" />

                        <SeekBar
                            android:id="@+id/ttsVolumeSeekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="8dp"
                            android:max="100"
                            android:progress="100"
                            android:progressTint="@color/white_100"
                            android:thumbTint="@color/white_100"
                            android:progressBackgroundTint="@color/white_200" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_100_percent"
                            android:textSize="12sp"
                            android:textColor="@color/purple_card_text_secondary" />

                        <TextView
                            android:id="@+id/ttsVolumeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_100_percent"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"
                            android:minWidth="40dp"
                            android:gravity="center"
                            android:textColor="@color/white_100" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Language & Voice Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_language_24"
                            android:tint="@color/white_100"
                            android:contentDescription="Language &amp; Voice"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/voice_language_section"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_card_text_primary" />

                    </LinearLayout>

                    <!-- @string/voice_language_preset_title Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_language_preset_title"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/purple_card_text_primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_language_preset_description"
                        android:textSize="14sp"
                        android:textColor="@color/purple_card_text_secondary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/languagePresetSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:minHeight="48dp"
                        android:background="@drawable/dropdown_background"
                        android:popupBackground="?attr/colorSurface"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_preset_recommendation"
                        android:textSize="13sp"
                        android:textColor="@color/white_100"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="-4dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="8dp" />

                    <!-- Translation Assistance Section -->
                    <LinearLayout
                        android:id="@+id/cardTranslationHelp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info_24"
                            android:contentDescription="Info"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/white_100" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/voice_help_translate"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_card_text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/voice_help_translate_description_button"
                                android:textSize="12sp"
                                android:textColor="@color/purple_card_text_secondary"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/arrow_right"
                            android:textSize="20sp"
                            android:textColor="@color/white_100" />

                    </LinearLayout>

                    <!-- Advanced Options Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/voice_show_advanced"
                            android:textSize="14sp"
                            android:textColor="@color/purple_card_text_secondary"
                            android:layout_marginEnd="8dp" />
                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchAdvancedVoice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:thumbTint="@color/switch_thumb_color"
                            android:trackTint="@color/switch_track_color"
                            app:thumbTint="@color/switch_thumb_color"
                            app:trackTint="@color/switch_track_color" />
                    </LinearLayout>

                    <!-- Advanced Voice Picker Section (initially hidden) -->
                    <LinearLayout
                        android:id="@+id/layoutAdvancedVoiceSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_advanced_voice_section"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">

                        <!-- Advanced Label and Divider -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/voice_advanced_label"
                                android:textStyle="bold"
                                android:textColor="@color/white_100"
                                android:textSize="16sp"
                                android:layout_marginEnd="8dp" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1"
                                android:background="@color/white_100" />
                        </LinearLayout>

                        <!-- TTS Language Section (moved to Advanced) -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/voice_tts_language_advanced"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/purple_card_text_primary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/voice_tts_language_description"
                            android:textSize="14sp"
                            android:textColor="@color/purple_card_text_secondary"
                            android:layout_marginBottom="8dp" />

                        <Spinner
                            android:id="@+id/ttsLanguageSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:minHeight="48dp"
                            android:background="@drawable/spinner_background"
                            android:popupBackground="?attr/colorSurface"
                            android:padding="12dp" />

                        <!-- Voice Section -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/voice_specific_voice_advanced"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/purple_card_text_primary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/voice_specific_voice_description"
                                    android:textSize="14sp"
                                    android:textColor="@color/purple_card_text_secondary" />
                                
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/warning_24px"
                                    app:tint="@color/white_100"
                                    android:layout_marginStart="6dp"
                                    android:contentDescription="Warning icon" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/btnVoiceInfo"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/help_24px"
                                android:contentDescription="More Info"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                                android:padding="4dp"
                                android:layout_marginStart="8dp"
                                app:tint="@color/white_100" />

                        </LinearLayout>

                        <!-- Multi-Language Warning -->
                        <LinearLayout
                            android:id="@+id/multiLanguageWarning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="8dp"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_info_24"
                                android:contentDescription="Warning"
                                android:layout_marginEnd="8dp"
                                app:tint="@color/white_100" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/specific_voice_warning"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/white_100" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/voice_tap_for_details"
                                android:textSize="10sp"
                                android:textColor="@color/purple_card_text_secondary" />

                        </LinearLayout>

                        <Spinner
                            android:id="@+id/voiceSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:minHeight="48dp"
                            android:background="@drawable/spinner_background"
                            android:popupBackground="?attr/colorSurface"
                            android:padding="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="top"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="12dp"
                            android:layout_marginBottom="24dp">
                            
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/lightbulb_2_24px"
                                app:tint="@color/white_100"
                                android:layout_marginEnd="6dp"
                                android:layout_marginTop="2dp"
                                android:contentDescription="Recommendation icon" />
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/voice_advanced_recommendation"
                                android:textSize="14sp"
                                android:textColor="@color/purple_card_text_secondary" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/voice_reset_warning"
                            android:textSize="13sp"
                            android:textColor="@color/purple_card_text_secondary"
                            android:layout_marginBottom="8dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:padding="8dp" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Audio Output Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_mobile_speaker_24"
                            android:tint="@color/white_100"
                            android:contentDescription="Audio Output Settings"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/voice_audio_output_settings"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_card_text_primary" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_audio_output_description"
                        android:textSize="14sp"
                        android:textColor="@color/purple_card_text_secondary"
                        android:layout_marginBottom="16dp" />

                    <!-- Audio Usage -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_audio_stream_type"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/purple_card_text_primary" />

                    <Spinner
                        android:id="@+id/audioUsageSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:minHeight="48dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="?attr/colorSurface"
                        android:padding="12dp" />

                    <!-- Content Type -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_content_type"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/purple_card_text_primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_content_type_description"
                        android:textSize="14sp"
                        android:textColor="@color/purple_card_text_secondary"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/contentTypeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:minHeight="48dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="?attr/colorSurface"
                        android:padding="12dp" />

                    <!-- Audio Channel Help Text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/lightbulb_2_24px"
                                app:tint="@color/white_100"
                                android:layout_marginEnd="6dp"
                                android:contentDescription="Recommendation icon" />
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/voice_audio_recommendation"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_card_text_secondary" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btnAudioHelp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/help_24px"
                            android:contentDescription="More Info"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            app:tint="@color/white_100" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Preview & Actions Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_card_subtle_right">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_sound_sampler_24"
                            android:tint="@color/white_100"
                            android:contentDescription="Preview &amp; Actions"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/voice_preview_actions"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_card_text_primary" />

                    </LinearLayout>

                    <!-- Preview Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_preview_button"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/purple_card_text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/bg_advanced_voice_section"
                        android:padding="4dp">

                        <Button
                            android:id="@+id/previewButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/voice_test_settings"
                            android:textSize="16sp"
                            android:padding="16dp"
                            app:cornerRadius="12dp"
                            style="@style/Widget.SpeakThat.Button.Primary" />

                    </LinearLayout>

                    <!-- Action Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_advanced_voice_section"
                            android:padding="4dp">

                            <Button
                                android:id="@+id/resetButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/voice_reset_defaults"
                                android:textSize="16sp"
                                android:textColor="@color/white_100"
                                android:background="@android:color/transparent"
                                android:padding="12dp"
                                app:cornerRadius="12dp"
                                style="@style/Widget.Material3.Button.TextButton" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Help Text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:layout_marginTop="24dp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground">
                        
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/lightbulb_2_24px"
                            app:tint="@color/white_100"
                            android:layout_marginEnd="6dp"
                            android:layout_marginTop="2dp"
                            android:contentDescription="Tip icon" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/voice_preview_tip"
                            android:textSize="14sp"
                            android:textColor="@color/purple_card_text_secondary" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout> 