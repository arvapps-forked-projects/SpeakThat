<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">
    
    <!-- Glow sequence for letter 'p' - pulsing blue glow -->
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="250"
        android:valueFrom="@android:color/transparent"
        android:valueTo="@android:color/holo_blue_light"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="250"
        android:valueFrom="0"
        android:valueTo="7"
        android:valueType="floatType" />
    
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="180"
        android:valueFrom="@android:color/holo_blue_light"
        android:valueTo="@android:color/holo_blue_dark"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="180"
        android:valueFrom="7"
        android:valueTo="11"
        android:valueType="floatType" />
    
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="120"
        android:valueFrom="@android:color/holo_blue_dark"
        android:valueTo="@android:color/holo_blue_light"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="120"
        android:valueFrom="11"
        android:valueTo="7"
        android:valueType="floatType" />
    
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="250"
        android:valueFrom="@android:color/holo_blue_light"
        android:valueTo="@android:color/transparent"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="250"
        android:valueFrom="7"
        android:valueTo="0"
        android:valueType="floatType" />
    
</set>
