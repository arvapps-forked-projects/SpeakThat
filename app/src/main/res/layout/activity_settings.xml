                    android:gravity="center_vertical"
                    android:background="@drawable/gradient_card_subtle_right">

                    <ImageView
                        android:id="@+id/iconReRunOnboarding"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_laps_24"
                        android:tint="@color/white_100"
                        android:contentDescription="@string/settings_rerun_onboarding" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_rerun_onboarding"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_card_text_primary" />

