                            android:layout_height="wrap_content"
                            android:text="@string/settings_voice_title"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_card_text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_voice_description"
                            android:textSize="14sp"
                            android:textColor="@color/purple_card_text_secondary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/arrow_right"
                        android:textSize="24sp"
                        android:textColor="@color/white_100" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Behavior Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBehaviorSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
