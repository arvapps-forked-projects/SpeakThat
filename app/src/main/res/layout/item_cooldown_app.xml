<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="@drawable/darkened_overlay_background"
    android:layout_marginBottom="4dp">

    <!-- App Icon -->
    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_app_unknown"
        android:contentDescription="App icon" />

    <!-- App Info and Dropdown Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="12dp">

        <!-- App Name -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_cooldown_app_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white_100"
            android:layout_marginBottom="4dp" />

        <!-- Package Name -->
        <TextView
            android:id="@+id/packageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_cooldown_package"
            android:textSize="12sp"
            android:textColor="@color/white_200"
            android:layout_marginBottom="8dp" />

        <!-- Cooldown Time Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_cooldown_time"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/white_200"
            app:hintTextColor="@color/white_200"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/cooldownTimeDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="@string/item_cooldown_no_cooldown"
                android:textColor="@color/white_100" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete_24"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Remove word"
        app:tint="@color/white_100"
        android:padding="4dp" />

</LinearLayout> 