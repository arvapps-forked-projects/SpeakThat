<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:minHeight="56dp">

    <TextView
        android:id="@+id/textAppName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/item_app_filter_name"
        android:textSize="16sp"
        android:textColor="@color/white_100"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <CheckBox
        android:id="@+id/checkBoxPrivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_app_filter_private"
        android:textSize="14sp"
        android:textColor="@color/white_100"
        android:buttonTint="@color/white_100"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/buttonRemove"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete_24"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Remove app"
        app:tint="@color/white_100"
        android:padding="4dp" />

</LinearLayout> 