<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">
    
    <!-- Glow sequence for letter 'k' - pulsing cyan glow -->
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="190"
        android:valueFrom="@android:color/transparent"
        android:valueTo="@android:color/holo_blue_bright"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="190"
        android:valueFrom="0"
        android:valueTo="5"
        android:valueType="floatType" />
    
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="140"
        android:valueFrom="@android:color/holo_blue_bright"
        android:valueTo="@android:color/holo_blue_dark"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="140"
        android:valueFrom="5"
        android:valueTo="9"
        android:valueType="floatType" />
    
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="100"
        android:valueFrom="@android:color/holo_blue_dark"
        android:valueTo="@android:color/holo_blue_bright"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="100"
        android:valueFrom="9"
        android:valueTo="5"
        android:valueType="floatType" />
    
    <objectAnimator
        android:propertyName="strokeColor"
        android:duration="190"
        android:valueFrom="@android:color/holo_blue_bright"
        android:valueTo="@android:color/transparent"
        android:valueType="colorType" />
    
    <objectAnimator
        android:propertyName="strokeWidth"
        android:duration="190"
        android:valueFrom="5"
        android:valueTo="0"
        android:valueType="floatType" />
    
</set>
