                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/arrow_right"
                        android:textSize="24sp"
                        android:textColor="@color/white_100" />

